<div class="container">
    <div class="row" style="text-align: center">
        <h1>Add a new comment</h1>
        
        <form action = "/campgrounds/<%=campground._id%>/comments" method= "POST" style="width: 45%; margin:0 auto;">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Your name" name="author">
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Your comment" name="comment">
            </div>
            
            <div class="form-group">
                <button class="btn btn-md btn-default btn-block">Submit</button>
            </div>
        </form>
        
        <a href = "/campgrounds">Go Back!</a>
    </div>
</div>